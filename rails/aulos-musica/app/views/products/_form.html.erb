<%= form_for @product do |f|%>
  <div class="title">
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div class="subtitle">
    <%= f.label :subtitle %>
    <%= f.text_field :subtitle %>
  </div>
  <div class="author">
    <%= f.label :author %>
    <%= f.text_field :author %>
  </div>
  <div class="composer">
    <%= f.label :composer %>
    <%= f.text_field :composer %>
  </div>
  <div class="description">
    <%= f.label :description %>
    <%= f.text_field :description %>
  </div>
  <div class="info">
    <%= f.label :info %>
    <%= f.text_field :info %>
  </div>
  <div class="instrument">
    <%= f.label :instrument %>
    <%= f.text_field :instrument %>
  </div>
  <div class="isbn">
    <%= f.label :isbn %>
    <%= f.text_field :isbn %>
  </div>
  <div class="manufacturer">
    <%= f.label :manufacturer %>
    <%= f.text_field :manufacturer %>
  </div>
  <div class="type">
    <%= f.label :type %>
    <%= f.text_field :type %>
  </div>

  <%= f.submit %>

<%end %>
